# ImageAI 环境变量配置示例
# 复制此文件为 .env.local 并填写实际值

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/imageai?schema=public"

# JWT 认证配置
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Gemini API 配置
# 从 https://aistudio.google.com/app/apikey 获取
GEMINI_API_KEY="your-gemini-api-key-here"

# 文件存储配置（可选，用于 Phase 2）
# AWS S3 配置
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-northeast-1"
AWS_S3_BUCKET_NAME="imageai-uploads"

# 阿里云 OSS 配置（替代 AWS S3）
ALIYUN_ACCESS_KEY_ID=""
ALIYUN_ACCESS_KEY_SECRET=""
ALIYUN_OSS_REGION="oss-cn-hangzhou"
ALIYUN_OSS_BUCKET_NAME="imageai-uploads"

# Stripe 支付配置（可选，用于 Phase 5）
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# 应用配置
NEXT_PUBLIC_APP_URL="http://localhost:3000"
